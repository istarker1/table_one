<div class="form_background">

  <h2 class="log_in_title">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, required: true, autofocus: true, placeholder: "First name" %>
    </div>

    <div class="field">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, required: true, autofocus: true, placeholder: "Last name" %>
    </div>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, required: true, autofocus: true, placeholder: "Email" %>
    </div>
    <br />
    <div class="field">
      <%= f.label :password "(#{@minimum_password_length} characters minimum)" %>
      <% if @minimum_password_length %>
      <em></em>
      <% end %>
      <%= f.password_field :password, required: true, autocomplete: "off", placeholder: "Password (#{@minimum_password_length} characters minimum)" %>
    </div><br />

    <div class="field">
      <%= f.label :password_confirmation, required: true %>
      <%= f.password_field :password_confirmation, required: true, autocomplete: "off", placeholder: "Confirm password" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: "button" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
