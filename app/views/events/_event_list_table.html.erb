<table class="event-list hover">
  <thead>
    <tr>
      <th width="200">Users</th>
      <th>Event</th>
      <th width="100">Table Size</th>
      <th width="150"></th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= "#{event.host_names}" %></td>
        <td><%= link_to "#{event.name}", event_path(event) %></td>
        <td><%= "#{event.table_size_limit}" %></td>
        <td><%= link_to "Edit", edit_event_path(event) %> /
          <%= link_to "Delete", event_path(event),
          method: :delete, data: { confirm: 'Are you sure?'} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
