<div class="top-bar">
  <div class="top-bar-left">
    <ul class="menu horizontal" data-dropdown-menu>
      <li class="menu-text"><%= link_to "Table One" %></li>
    </ul>
  </div>
  <div class="top-bar-right">
    <ul class="menu horizontal">
      <% if current_user %>
        <li class="menu-text"><%= "Hello #{current_user.first_name}!" %></li>
        <li class="menu-text"><%= link_to "Edit Account", edit_user_registration_path %></li>
        <li class="menu-text"><%= link_to "Sign Out", destroy_user_session_path, method: :delete,
          data: { confirm: "Are you sure?" }%></li>
      <% else %>
        <li class="menu-text"><%= link_to "Sign In", new_user_session_path %></li>
        <li class="menu-text"><%= link_to "Sign Up", new_user_registration_path %></li>
      <% end %>
    </ul>
  </div>
</div>
